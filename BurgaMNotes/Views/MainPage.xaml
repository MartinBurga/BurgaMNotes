<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BurgaMNotes.Views.MainPage"
             Title="BurgaM_Home">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="notas.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="A Notes photo." />

            <Label
                Text="Actividad Apuntes - Martin Burga"
                FontAttributes="Bold"   
                SemanticProperties.HeadingLevel="Level1" 
                HorizontalOptions="Center"
                FontSize="30"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
